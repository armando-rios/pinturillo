# Configuración del servidor
PORT=3000
NODE_ENV=development

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/pinturillo

# Configuración de CORS (URLs permitidas separadas por comas)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT para autenticación (generar una clave secreta segura)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Configuración de Socket.IO
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Configuración del juego
DEFAULT_ROOM_MAX_PLAYERS=8
DEFAULT_GAME_ROUNDS=3
DRAWING_TIME_LIMIT=60
GUESSING_TIME_LIMIT=10

# Configuración de logging
LOG_LEVEL=info

# URLs de servicios externos
DICEBEAR_API_URL=https://api.dicebear.com/7.x/avataaars/svg