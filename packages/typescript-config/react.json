{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "target": "ES2022",

    // React specific
    "useDefineForClassFields": true,

    // Additional strict checks for React
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
